---
import '@/styles/global.css';

import { NavbarWide } from '@/components/navbar/navbar-wide';

import Footer from '@/components/Footer.astro';

interface Props {
title?: string;
}
const { title = 'Elixir Norway' } = Astro.props;
---

<html lang="en" class="dark">
	<head class=header>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/elixir-no-webpages/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/elixir-no-webpages/_astro/helpdesk.e2023ee3.css"/>
	</head>
	<body class="bg-dark-500">
		<div class="hidden md:block mx-auto max-w-[1200px] header">
			<NavbarWide client:load />
		</div>
		<div class="block md:hidden ">
			<!-- TODO: burger menu for mobile screens -->
		</div>
		<div class="h-full mx-auto max-w content-bg">
			<div class="mx-auto">
				<slot />
			</div>
		</div>
		<div>
			<Footer />
		</div>
	</body>
</html>
