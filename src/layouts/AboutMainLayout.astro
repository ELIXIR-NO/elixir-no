---
import '@styles/global.css';
import TopNavMenu from '@components/topNavMenu/TopNavMenu.astro';
import Footer from '@components/Footer.astro';
import LeftMenu from '@components/LeftMenu.astro';
import RightMenu from '@components/RightMenu.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='viewport' content='width=device-width' />
        <meta name='generator' content={Astro.generator} />
		<title>{`Elixir Norway ${title || ''}`}</title>
    </head>
    <body>
        <div class="grid h-full grid-rows-[auto_1fr_200px]">
			<div class="sticky top-0 grid grid-cols-[1fr_10fr_1fr] bg-gray-900/80">
				<div></div>
				<div>
					<TopNavMenu />
				</div>
				<div></div>
			</div>
			<div class="grid grid-cols-[1fr_2fr_8fr_1fr]">
				<div></div>
                <div class="grid col-start-2">
                    <LeftMenu
                    menuName='MENU'
                    menuItems= {[
                        {
                            link: '/about/organisation',
                            label: 'Organisation',
                            subItems: [
                            { label: 'Bergen', link: '/about/organisation/bergen', },
                            { label: 'Oslo', link: '/about/organisation/oslo', },
                            { label: 'Tromsø', link: '/about/organisation/tromsoe', },
                            { label: 'Trondheim', link: '/about/organisation/trondheim', },
                            { label: 'Ås', link: '/about/organisation/aas', },
                            ],
                        },
                        {
                            link: '/about/biomeddata',
                            label: 'BioMedData',
                            subItems: [
                            { label: 'LS RDM', link: '/about/biomeddata/ls-rdm', },
                            ],
                        },
                        {
                            link: '/about/international',
                            label: 'International',
                            subItems: [
                            { label: 'ELIXIR EU', link: '/about/international-involvement/elixir-eu', },
                            { label: 'EU projects', link: '/about/international-involvement/eu-projects', },
                            { label: 'Sensitive data', link: '/about/international-involvement/nordic-sensitive-data', },
                            { label: 'Biodata', link: '/about/international-involvement/biodata', },
                            ],
                        },
                        ]}
                    />
                </div>
                <div class="col-start-3 main-content mb-5 mt-5"><slot /></div>
				<div></div>
			</div>
			<div class="bg-gray-800 align-bottom">
				<Footer />
			</div>
		</div>
    </body>
</html>