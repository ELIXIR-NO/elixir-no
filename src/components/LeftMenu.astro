---
import type { LeftMenuProps } from 'src/types';
const { menuName, menuItems } = Astro.props as LeftMenuProps;
---

<div
	class="m-8 flex h-fit min-w-fit flex-col rounded-lg bg-white drop-shadow-md">
	<p class="rounded-t-lg bg-elixir-blue text-center text-lg text-white">
		{menuName}
	</p>
	<div class="flex h-fit flex-col">
		{
			menuItems.map(item => (
				<ol>
					<li class="m-1 p-1 text-center hover:m-1 hover:rounded-md hover:bg-elixir-grey/80 hover:text-white">
						<a href={item.link}>{item.label}</a>
					</li>
				</ol>
			))
		}
	</div>
</div>
